@model Peach_Grove_Apartments_Demo_Project.ViewModels.MaintenanceRequestViewModel

@{
    ViewData["Title"] = "Maintenance Edit";
    Layout = "~/Views/Shared/_ManagerAccountLayout.cshtml";
}

<h1>Maintenace Edit</h1>


@if (ViewBag.MaintenanceEditSuccess != null && ViewBag.MaintenanceEditSuccess)
{

    <div style="background: lightgreen; border: 1px solid green; color: black; width: 600px;text-align: center;padding: 40px;">
        <div style="display: inline-block;">
            <b>It was edited successfully!</b>
        </div>
    </div>
    <br />
    <br />
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ApplicationEdit" id="applicationedit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProblemDescription" class="control-label"></label>
                <input asp-for="ProblemDescription" class="form-control" />
                <span asp-validation-for="ProblemDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="isAllowedToEnter" class="control-label"></label>
                <input asp-for="isAllowedToEnter" class="form-control" />
                <span asp-validation-for="isAllowedToEnter" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="maintenanceuser">Back to List</a>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

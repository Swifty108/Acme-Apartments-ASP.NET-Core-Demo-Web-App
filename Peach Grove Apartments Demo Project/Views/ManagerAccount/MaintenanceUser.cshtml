@using Microsoft.AspNetCore.Identity
@inject SignInManager<AptUser> SignInManager
@inject UserManager<AptUser> UserManager
@model Peach_Grove_Apartments_Demo_Project.ViewModels.MaintenanceRequestViewModel
@{
    ViewData["Title"] = "Maintenace User";
    var user = UserManager.GetUserAsync(User).Result;
}

<partial name="_LoggedInAsPartial" />
<br />
<h1>Maintenance Requests for @Model.userFName @Model.userLName</h1>

<hr />
<div class="container">
    @{
        if (Model.mRequests.Count() != 0)
        { <table class="table fp-table">

                <thead class="thead-light">
                    <tr>
                        <th scope="col">Maintenance Id</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mRecord in Model.mRequests)

                    {
                        <tr>
                            <td>@mRecord.Id</td>

                            <td>
                                <div class="fp-applylink">
                                    <a asp-controller="manageraccount" asp-action="viewmaintenancerequest" asp-route-id="@mRecord.Id">View</a>
                                </div>
                            </td>

                            <td>
                                <div class="fp-applylink">
                                    <a asp-controller="manageraccount" asp-action="maintenanceedit" asp-route-id="@mRecord.Id">Edit</a>
                                </div>
                            </td>

                            @{ if (!mRecord.isApproved)
                                {
                                    <td>
                                        <div class="fp-applylink">
                                            <a asp-controller="manageraccount" asp-action="approvemaintenance" asp-route-mid="@mRecord.Id" asp-route-id="@mRecord.AptUserId">Approve</a>
                                        </div>
                                    </td>
                                }
                            }

                            <td>
                                <div class="fp-applylink">
                                    <a asp-controller="manageraccount" asp-action="maintenancedelete" asp-route-id="@mRecord.Id">Delete</a>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h4>This resident does not have any requests on file.</h4>
        }
    }
</div>


@using Microsoft.AspNetCore.Identity
@inject UserManager<AptUser> UserManager

@{

    //var user = await UserManager.GetUserAsync(User);

    if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">

            @if (User.IsInRole("Applicant"))
            {
                <a class="nav-link" asp-controller="applicantaccount" asp-action="index" title="Account Dashboard"><span class="text-white" style="font-size: 15px;"><i class="fa fa-tachometer text-white"></i>  Hi @UserManager.GetUserAsync(User).Result.FirstName! </span></a>
            }
            else if (User.IsInRole("Resident"))
            {
                <a class="nav-link text-white" asp-controller="residentaccount" asp-action="index" title="Account Dashboard"><span class="text-white" style="font-size: 15px;"><i class="fa fa-tachometer text-white"></i>  Hi @UserManager.GetUserAsync(User).Result.FirstName!</span> </a>
            }
            else if (User.IsInRole("Manager"))
            {
                <a class="nav-link text-white" asp-controller="manageraccount" asp-action="index" title="Account Dashboard"><span class="text-white" style="font-size: 15px;"><i class="fa fa-tachometer text-white"></i>  Hi @UserManager.GetUserAsync(User).Result.FirstName!</span> </a>
            }
        </li>
        <li class="nav-item" style="margin-top: 3px;">

            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout">
                <button type="submit" class="nav-link btn btn-link"><span class="text-white" style="font-size: 15px;"><i class="fa fa-sign-out text-white"></i>  Logout</span></button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register" asp-route-isdirectregister="@true"><span class="text-white" style="font-size: 15px;"> <i class="fa fa-registered text-white"></i>  Register</span></a>
        </li>

        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login" asp-route-isdirectlogin="@true"><span class="text-white" style="font-size: 15px;"> <i class="fa fa-user-circle text-white" style="font-size: 15px;"></i>  Login</span></a>
        </li>
    }
}
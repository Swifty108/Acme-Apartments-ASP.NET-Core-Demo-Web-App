@{

    Layout = "~/Views/Shared/_ParentAuthLayout.cshtml";


}


<div class="row justify-content-center">
    <div class="card login-logout-tab">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link" href='/Identity/Account/Login?isDirectLogin=@true'>Login</a>
                </li>
                <li class="nav-item">
                    @{
                        //TODO-P: redirect like login with isdirectlogin
                    }
                    <a class="nav-link" href='/Identity/Account/Register?isDirectRegister=@true'>Register</a>
                </li>
            </ul>
        </div>
        <div class="card-content">
            <div class="col-md-12">

                @RenderBody()
            </div>
        </div>
    </div>
</div>


@RenderSection("Scripts", required: false)

<script>
    $(function () {
        var current = location.pathname;
        $('.nav-tabs li a').each(function () {
            var $this = $(this);
            if (current.indexOf($this.attr('href')) !== -1) {
                $this.addClass('active');
            }
        })
    })
</script>


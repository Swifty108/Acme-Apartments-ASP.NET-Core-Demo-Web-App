@model IList<Peach_Grove_Apartments_Demo_Project.Models.Application>
@{
    ViewData["Title"] = "Applications";
    Layout = "~/Views/Shared/_ApplicantAccountLayout.cshtml";
}

<partial name="_LoggedInAsPartial" />
<br />
<h1>Your Applications</h1>



<hr />
<div class="container">
    @{
        if (Model.Count != 0)
        { <table class="table fp-table">

                <thead class="thead-light">
                    <tr>
                        <th scope="col">Date Applied</th>
                        <th scope="col">Apartment Number</th>
                        <th scope="col">SQ Feet</th>
                        <th scope="col">Price</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var application in Model)

                    {
                        <tr>
                            <td>@application.DateApplied</td>
                            <td>@application.AptNumber</td>
                            <td>@application.Area</td>
                            <td>@application.Price</td>
                            <td>
                                <div class="fp-applylink">
                                    <a asp-controller="applicantaccount" asp-action="delete" asp-route-Id="@application.ApplicationId">Cancel</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h4>You haven't applied for an apartment yet. Please apply today!</h4>
        }
    }
</div>

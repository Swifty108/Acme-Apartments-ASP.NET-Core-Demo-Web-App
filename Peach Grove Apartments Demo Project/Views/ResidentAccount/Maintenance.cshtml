@model Peach_Grove_Apartments_Demo_Project.ViewModels.MaintenanceRequestViewModel
@{
    ViewData["Title"] = "Maintenance";
    Layout = "~/Views/Shared/_ResidentAccountLayout.cshtml";
}

@{
    //todo-p: success messages make resp
}

<partial name="_LoggedInAsPartial" />
<br />

<h1>Maintenance Request</h1>
<br />
@if (ViewBag.MaintenanceSuccess != null && ViewBag.MaintenanceSuccess)
{
    <div style="background: lightgreen; border: 1px solid green; color: black; width: 600px;text-align: center;padding: 40px;">
        <div style="display: inline-block;">
            <b>Your maintenance request was submitted successfully!</b>
        </div>
    </div>
    <br />
    <br />
}
else if (ViewBag.MaintenanceSuccess == false && ViewBag.MaintenanceSuccess)
{
    <div style="background: orange; color: black; border: 1px solid yellow; width: 600px;text-align: center;padding: 40px;">
        <div style="display: inline-block;">
            <b>There was a problem submitting your request. Please try again later.</b>
        </div>
    </div>
    <br />
    <br />
}
<br />


<div class="container">

    <nav>
        <div class="nav nav-tabs mr" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active" id="nav-newrequest-tab" data-toggle="tab" href="#nav-newrequest" role="tab" aria-controls="nav-newrequest" aria-selected="true">New Request</a>
            <a class="nav-item nav-link" id="nav-reqhistory-tab" data-toggle="tab" href="#nav-reqhistory" role="tab" aria-controls="nav-reqhistory" aria-selected="false">Request History</a>
        </div>
    </nav>

    <div class="tab-content" id="nav-tabContent">

        <div class="tab-pane fade show active" id="nav-newrequest" role="tabpanel" aria-labelledby="nav-newrequest-tab">

            <form id="newreq" asp-action="maintenance">
                <input type="hidden" asp-for="AptUserId" value="@Model.AptUserId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ProblemDescription" class="control-label"></label>
                    <textarea asp-for="ProblemDescription" class="form-control" maxlength="10000" required></textarea>
                    <span asp-validation-for="ProblemDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="isAllowedToEnter" class="control-label" />
                    <label asp-for="isAllowedToEnter" class="control-label"></label>
                    <span asp-validation-for="isAllowedToEnter" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </form>

        </div>

        <div class="tab-pane fade" id="nav-reqhistory" role="tabpanel" aria-labelledby="nav-reqhistory-tab">

            <div id="showError">
                <b>Your maintenance history is empty.</b>
            </div>


            <table class="table table-hover fp-table" id="reqhistorytable">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">Date Requested</th>
                        <th scope="col">Description</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <tbody id="tbody-appened"></tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />

}

<script type="text/javascript">




    $(document).ready(function () {
        $("#nav-reqhistory-tab").click(function () {
            $("#showError").hide();
            $.ajax({
                type: "GET",
                url: "/residentaccount/getreqhistory",
                async: true,
                dataType: "json",
                success: function (response) {

                    if (response.list.length != 0) {
                        //$("#showError").hide();
                        createTable(response.list);
                    }
                    else {
                        $("#showError").show();
                        $("#reqhistorytable").hide();
                    }
                },
                failure: function (response) {
                    alert("failed");
                },
                error: function (response) {
                    alert(response);
                }
            });
        });

        function createTable(data) {
            $("#tbody-appened").empty();
            //var tbody = $("<tbody />"), tr;

            $.each(data, function (_, obj) {
                var tr = $("<tr />");
                $.each(obj, function (index, value) {
                    switch (index) {
                        case "dateRequested":
                        case "problemDescription":
                            tr.append("<td> " + value + " </td>");
                            break;
                        case "isApproved":
                            var toAppend = (value == true) ? "<td> Approved </td>" : "<td> Pending Approval </td>";
                            tr.append(toAppend);
                            break;
                    }

                });
                tr.appendTo("#tbody-appened");
            });
            //tbody.appendTo("#reqhistorytable");
        }


    });

</script>

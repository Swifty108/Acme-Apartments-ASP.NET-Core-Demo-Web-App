@model Peach_Grove_Apartments_Demo_Project.ViewModels.MaintenanceRequestViewModel
@{
    ViewData["Title"] = "Maintenance";
    Layout = "~/Views/Shared/_ResidentAccountLayout.cshtml";
}
<partial name="_LoggedInAsPartial" />
<br />

<h1>New Maintenance Request</h1>
<br />
@if (ViewBag.MaintenanceSuccess != null && ViewBag.MaintenanceSuccess)
{
    <div style="background: lightgreen; border: 1px solid green; color: black; width: 600px;text-align: center;padding: 40px;">
        <div style="display: inline-block;">
            <b>Your maintenance request was submitted successfully!</b>
        </div>
    </div>
    <br />
    <br />
}
else if (ViewBag.MaintenanceSuccess == false && ViewBag.MaintenanceSuccess)
{
    <div style="background: orange; color: black; border: 1px solid yellow; width: 600px;text-align: center;padding: 40px;">
        <div style="display: inline-block;">
            <b>There was a problem submitting your request. Please try again later.</b>
        </div>
    </div>
    <br />
    <br />
}
<br />


<div class="container">

    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Home</a>
            <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Profile</a>
        </div>
    </nav>

    <div class="tab-content" id="nav-tabContent">

        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">fdfdafasfdasf</div>


        <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">

            <table class="table table-hover" id="reqhistorytable">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">Date Requested</th>
                        <th scope="col">Description</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
            </table>
        </div>

    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />

}

<script type="text/javascript">




    $(function () {
        $("#reqhistoryclick").click(function () {
            $.ajax({
                type: "GET",
                url: "/residentaccount/getreqhistory",
                async: true,
                dataType: "json",
                success: function (response) {

                    createTable(response.list);
                   
                },
                failure: function (response) {
                    alert("failed");
                },
                error: function (response) {
                    alert(response);
                }
            });
        });

        function createTable(data) {
            var tbody = $("<tbody />"), tr;
            $.each(data, function (_, obj) {
                tr = $("<tr />");
                $.each(obj, function (index, value) {
                    switch (index) {
                        case "dateRequested":
                        case "problemDescription":
                            tr.append("<td> " + value + " </td>");
                            break;
                        case "isApproved":
                            var toAppend = (value == true) ? "<td> Approved </td>" : "<td> Under Review </td>";
                            tr.append(toAppend);
                            break;
                    }

                });
                tr.appendTo(tbody);
            });
            tbody.appendTo("#reqhistorytable");
        }
    });

</script>

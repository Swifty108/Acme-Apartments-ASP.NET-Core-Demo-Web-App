@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    ViewBag.SuccessMessage = "You have successfully logged out.";
}

<div class="col-md-7" style="margin: 0 auto;">

    @if (Model.IsLogOutSuccess)
    {
        <partial name="~/Views/Shared/_ViewsStatusMessage.cshtml" model="ViewBag.SuccessMessage" />
        <br />
    }

    <div class="card">
        <div class="card-header">
            <h4>Login</h4>
        </div>
        <div class="card-body">
            <br />
            <div class="login-form-icon">
                <font size="10"><i class="fa fa-user-circle text-secondary fa-lg"></i></font>
            </div>
            <br />

            <form asp-route-returnUrl="@Model.ReturnUrl" asp-route-isdirectlogin="@Model.IsDirectLogin" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <font size="2"> <i class="fa fa-envelope"></i></font>
                                </div>
                            </div>
                            <input asp-for="Input.Email" class="form-control" placeholder="Email Address" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <font size="3"><i class="fa fa-lock"></i></font>
                                </div>
                            </div>
                            <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group form-actions">
                    <button type="submit" class="btn btn-primary col-md-6">Log in</button>
                </div>

                <div class="form-group" style="display: flex; justify-content: center;">

                    @if (Model.ReturnUrl != null && Model.ReturnUrl != "")
                    {
                        <p>
                            <a asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                    }
                    else
                    {
                        <p>
                            <a asp-area="Identity" asp-page="/Account/Register" asp-route-isdirectregister="@true">Register as a new user</a>
                        </p>
                    }
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}